<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommendAttentionLayout"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp10"
    android:background="@drawable/shape_recommond_attention"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recommendUserHeadImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:src="@mipmap/icon_female_selected" />

    <TextView
        android:id="@+id/recommendUserNickNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校花达人1"
        android:textColor="@color/color_333333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/talentBeGoodItTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp10"
        android:text="试色,妆容"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_16" />


    <TextView
        android:id="@+id/isAttentionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_attention"
        android:paddingBottom="@dimen/dp2"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp2"
        android:text="+关注"
        android:textColor="@color/color_ff5555" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_f1f1f1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10">


        <ImageView
            android:id="@+id/commentUserHeadImg"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_female_selected" />

        <TextView
            android:id="@+id/commentUserNickNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/commentUserHeadImg"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/commentUserHeadImg"
            android:text="aiaaiaiia" />

        <TextView
            android:id="@+id/commentDateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentUserNickNameTxt"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/commentUserHeadImg"
            android:text="06-09" />


    </RelativeLayout>

    <TextView
        android:id="@+id/commentReplyContentTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:text="回复@爱吃糖的洋：哈哈哈" />

    <include layout="@layout/view_line_horientol" />

    <TextView
        android:id="@+id/mineReplyContentTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:text=" @爱吃糖的洋:yayayya" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dynamicFaceUrlImg"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp75"
            android:scaleType="fitXY"
            android:src="@drawable/shape_place_holder" />


        <TextView
            android:id="@+id/dynamicContentTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>
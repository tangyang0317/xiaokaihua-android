<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F3F5FA" />

    <xkh.hzp.xkh.com.base.view.ItemLayout
        android:id="@+id/pwdManagerItemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        app:leftTitleTxt="密码管理"
        app:rightIcon="@mipmap/btn_item_back" />

    <include layout="@layout/view_line_horientol" />

    <xkh.hzp.xkh.com.base.view.ItemLayout
        android:id="@+id/clearCacheItemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        app:leftTitleTxt="清除缓存"
        app:rightIcon="@mipmap/btn_item_back" />

    <include layout="@layout/view_line_horientol" />

    <xkh.hzp.xkh.com.base.view.ItemLayout
        android:id="@+id/aboutXkhItemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        app:leftTitleTxt="关于校花"
        app:rightIcon="@mipmap/btn_item_back" />

    <include layout="@layout/view_line_horientol" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="@dimen/dp40"
        android:background="#fff">

        <TextView
            android:id="@+id/logoutTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="退出账号" />

    </RelativeLayout>

</LinearLayout>